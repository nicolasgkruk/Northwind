@model DB.Customers

@{
    ViewBag.Title = "Editar Cliente";
}

<h1 class="page-header">Editar Cliente</h1>

<div class="col-md-12" style="overflow: hidden;">
    <div class="panel panel-default col-md-6">
        <div class="panel-heading">Ficha de cliente</div>
        <div class="panel-body">
            <form asp-antiforgery="true" asp-action="Editar" asp-route-id="@Model.CustomerID">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CustomerID" />
                <div class="form-group">
                    <label asp-for="CompanyName" class="control-label"></label>
                    <input asp-for="CompanyName" class="form-control text-box single-line" />
                    <span asp-validation-for="CompanyName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactName" class="control-label"></label>
                    <input asp-for="ContactName" class="form-control text-box single-line" />
                    <span asp-validation-for="ContactName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ContactTitle" class="control-label"></label>
                    <input asp-for="ContactTitle" class="form-control text-box single-line" />
                    <span asp-validation-for="ContactTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control text-box single-line" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="City" class="control-label"></label>
                    <input asp-for="City" class="form-control text-box single-line" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Region" class="control-label"></label>
                    <input asp-for="Region" class="form-control text-box single-line" />
                    <span asp-validation-for="Region" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PostalCode" class="control-label"></label>
                    <input asp-for="PostalCode" class="form-control text-box single-line" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Country" class="control-label"></label>
                    <select asp-for="Country" class="form-control text-box single-line" asp-items="ViewBag.Paises"></select>
                    <span asp-validation-for="Country" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control text-box single-line" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fax" class="control-label"></label>
                    <input asp-for="Fax" class="form-control text-box single-line" />
                    <span asp-validation-for="Fax" class="text-danger"></span>
                </div>
                <div class="form-group text-right">
                    <input type="submit" value="Guardar cambios" class="btn btn-success" />
                    <a asp-action="Index" class="btn btn-primary">Volver al Listado</a>
                </div>
            </form>
        </div>
    </div>
</div>